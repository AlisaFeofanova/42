# **************************************************************************** #
#                                   LIBFT                                      #
# **************************************************************************** #

# –ò–º—è –∏—Ç–æ–≥–æ–≤–æ–π –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
NAME = libft.a

# –ö–æ–º–ø–∏–ª—è—Ç–æ—Ä –∏ —Ñ–ª–∞–≥–∏
CC = cc
CFLAGS = -Wall -Wextra -Werror

# –ê—Ä—Ö–∏–≤–∞—Ç–æ—Ä –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
AR = ar rcs

# –ò—Å—Ö–æ–¥–Ω–∏–∫–∏
SRC = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c \
	  ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c \
	  ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c \
	  ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c ft_strnstr.c \
	  ft_atoi.c ft_calloc.c ft_strdup.c 
# ft_substr.c ft_strjoin.c \
	  ft_strtrim.c ft_split.c ft_itoa.c ft_strmapi.c ft_striteri.c \
	  ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c 

# –û–±—ä–µ–∫—Ç–Ω—ã–µ —Ñ–∞–π–ª—ã (.o)
OBJ = $(SRC:.c=.o)

# –ü—Ä–∞–≤–∏–ª–æ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
all: $(NAME)

# –ö–∞–∫ —Å–æ–±—Ä–∞—Ç—å –±–∏–±–ª–∏–æ—Ç–µ–∫—É
$(NAME): $(OBJ)
	@$(AR) $(NAME) $(OBJ)
	@echo "‚úÖ libft.a —Å–æ–∑–¥–∞–Ω–∞!"

# –ü—Ä–∞–≤–∏–ª–æ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏ .c ‚Üí .o
%.o: %.c libft.h
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "Compiling $<"

# –û—á–∏—Å—Ç–∫–∞ –æ–±—ä–µ–∫—Ç–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤
clean:
	@rm -f $(OBJ)
	@echo "üßπ Object files cleaned"

# –ü–æ–ª–Ω–∞—è –æ—á–∏—Å—Ç–∫–∞ (–≤–∫–ª—é—á–∞—è –±–∏–±–ª–∏–æ—Ç–µ–∫—É)
fclean: clean
	@rm -f $(NAME)
	@echo "üóë  libft.a —É–¥–∞–ª–µ–Ω–∞"

# –ü–µ—Ä–µ—Å–±–æ—Ä–∫–∞
re: fclean all

# –ß—Ç–æ–±—ã make –Ω–µ –ø—É—Ç–∞–ª —Ü–µ–ª–∏ —Å —Ñ–∞–π–ª–∞–º–∏
.PHONY: all clean fclean re
